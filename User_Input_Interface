        function startAuth() {
            // ================= é…ç½®åŒº (è¯·ä¿®æ”¹è¿™é‡Œ) =================
            
            // 1. ä½ çš„ Twitter Client ID (ä»å¼€å‘è€…åå°å¤åˆ¶)
            const CLIENT_ID = 'bS1UVG5idE5rVVlIaFRIMlpHanA6MTpjaQ '; 
            
            // 2. ä½ çš„å›è°ƒåœ°å€ (å¿…é¡»ä¸å¼€å‘è€…åå°è®¾ç½®çš„ä¸€æ¨¡ä¸€æ ·ï¼Œä¸”è¦æ˜¯ Workflow B çš„ Webhook åœ°å€)
            const REDIRECT_URI = 'http://localhost:5678/rest/oauth2-credential/callback ';
            
            // ====================================================

            // è·å–ç”¨æˆ·è¾“å…¥çš„æ—¶é—´
            const freqInput = document.getElementById('frequency').value;
            
            if (!freqInput || freqInput < 5) {
                alert("è¯·è¾“å…¥æœ‰æ•ˆçš„é¢‘ç‡ï¼ˆè‡³å°‘ 5 åˆ†é’Ÿï¼‰");
                return;
            }

            // æ ¸å¿ƒé€»è¾‘ï¼šæˆ‘ä»¬å°†ç”¨æˆ·å¡«å†™çš„â€œé¢‘ç‡â€æ”¾å…¥ state å‚æ•°ä¸­
            // è¿™æ ·å½“ Twitter æˆæƒå®Œæˆåï¼Œä¼šåŸå°ä¸åŠ¨åœ°æŠŠè¿™ä¸ªæ•°å­—ä¼ å›ç»™æˆ‘ä»¬çš„å›è°ƒ Webhook
            const stateValue = freqInput; 

            // æ„å»º OAuth 2.0 æˆæƒé“¾æ¥
            // scope è§£é‡Š: 
            // tweet.read/write (å‘æ¨), users.read (è¯»ç”¨æˆ·ä¿¡æ¯), offline.access (è·å–åˆ·æ–°ä»¤ç‰Œï¼Œå®ç°æ°¸ä¹…å‘æ¨)
            const authUrl = `https://twitter.com/i/oauth2/authorize?` +
                `response_type=code` +
                `&client_id=${CLIENT_ID}` +
                `&redirect_uri=${encodeURIComponent(REDIRECT_URI)}` +
                `&scope=tweet.read%20tweet.write%20users.read%20offline.access` +
                `&state=${stateValue}` +
                `&code_challenge=challenge` +
                `&code_challenge_method=plain`;

            // è·³è½¬
            window.location.href = authUrl;
        }
    </script>
